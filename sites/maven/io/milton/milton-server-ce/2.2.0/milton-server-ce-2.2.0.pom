		<dependency>
			<scope>test</scope>
			<groupId>org.easymock</groupId>
			<artifactId>easymockclassextension</artifactId>
			<version>${easy-mock.version}</version>
		</dependency>
		<dependency>
			<scope>test</scope>
			<groupId>cglib</groupId>
