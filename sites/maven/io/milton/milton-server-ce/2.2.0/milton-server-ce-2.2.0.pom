        </license>
	</licenses>	
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>milton-api</artifactId>
			<version>${project.version}</version>
		</dependency>		
		<dependency>
			<groupId>org.jdom</groupId>
			<artifactId>jdom</artifactId>
			<version>1.1</version>
		</dependency>
